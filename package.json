{
  "name": "@dinari/brokerage-contracts",
  "packageManager": "yarn@3.2.0",
  "scripts": {
    "install:d2": "curl -fsSL https://d2lang.com/install.sh | sh -s --",
    "build:d2": "find . -type f  -name '*.d2' -exec d2 '{}' \\;",
    "install:foundry": "curl -L https://foundry.paradigm.xyz | bash | foundryup",
    "pretty": "forge fmt",
    "build": "forge build",
    "test": "forge test -vvv",
    "coverage": "forge coverage --report lcov && genhtml --branch-coverage --dark-mode -o ./coverage/ lcov.info",
    "keccak": "cast keccak",
    "deployall:testnet": "./script/deployall-testnet.sh",
    "deploy:tokenlist:testnet": "./script/deploytokenlist-testnet.sh",
    "deploy:mockpayment:testnet": "./script/deploy-mockpayment-testnet.sh",
    "dummyorder:testnet": "./script/dummyorder-testnet.sh",
    "mint:testnet": "./script/mint-testnet.sh",
    "errorcodes": "forge script script/Errors.s.sol:ErrorsScript -vvvv"
  },
  "devDependencies": {
    "hardhat": "^2.14.0",
    "hardhat-preprocessor": "^0.1.5",
    "pre-commit": "^1.2.2"
  },
  "pre-commit": [
    "pretty"
  ]
}
